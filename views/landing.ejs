<body>
<div class="container">
    <% if(error && error.length > 0){ %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
        <% } %>
        <% if(success && success.length > 0){ %>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
        <% } %>    
</div>

	<div class="row">
		<div class="col-lg-12">
			<div id="landing-header">
				<h1>Welcome To YelpCamp</h1>
				<hr> 
				<a href="/campgrounds" class="btn btn-success btn-lg"><i class="fas fa-paw"></i> View All Campgrounds</a>
			</div>
		</div>
	</div>
</div>

