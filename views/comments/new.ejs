<%- include('../partials/header'); -%>
<div class="container">
    <div class="row">
        <div style="width: 30%; margin: 30px auto; padding-top: 25px;">
            <h5 style="padding-bottom: 20px; text-align: center;">Add new Comment to <%= campground.name %></h5>
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <input class="btn btn-large btn-primary btn-block" type="submit" value="Submit!">
                </div>
            </form>

            <a href="/campgrounds">Go Back!</a> 
        </div>
       
    </div>
    
</div>

<%- include('../partials/footer'); -%>